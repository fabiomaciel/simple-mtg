<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <title>Signup Form</title>  
    <link rel="stylesheet" href="css/style.css">

</head>
 <% if(locals.error) { %>
 <div class="alerts">
     <% for(var i=0; i<locals.error.length; i++) {%>
     <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        <strong>Error!</strong><%= error[i] %>
    </div>
    <% } %>
</div>
<% } %>
<div class="form-container">
    <h2>Register</h2>
<form method="post">
    <div class="form-group">
        <label for="username"> Username</label>
        <input type="text" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control" value="<%= locals.email || '' %>" required />
    </div>
    <div class="form-group">
        <label for="email">Confirm Email</label>
        <input type="text" name="confirm_email" id="confirm_email" class="form-control" value="<%= locals.confirm_email || '' %>" required />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="confirm-password">Confirm Password</label>
        <input type="password" name="confirm_password" id="confirm_password" class="form-control" required />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" name='Register'>
    </div>
</form>
</div>
</body>




</body>
</html>
